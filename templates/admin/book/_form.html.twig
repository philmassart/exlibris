{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.title) }}</div>
    <div class="col-md-4">{{ form_row(form.author_last) }}</div>
    <div class="col-md-4">{{ form_row(form.author_first) }}</div>
</div>
<div class="row">
    <div class="col-md-4">{{ form_row(form.publisher) }}</div>
    <div class="col-md-4">{{ form_row(form.year) }}</div>
    <div class="col-md-4">{{ form_row(form.city) }}</div>
</div>
<div class="row">
    <div class="col-md-4">{{ form_row(form.collection) }}</div>
    <div class="col-md-4">{{ form_row(form.volume) }}</div>
    <div class="col-md-4">{{ form_row(form.storage) }}</div>
    <div class="col-md-4">{{ form_row(form.imageFile) }}</div>
</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}

